{
    "name": "functions",
    "scripts": {
        "build": "tsc && copyfiles -u 1 src/**/*.html lib",
        "deploy": "firebase deploy --only functions",
        "lint": "tslint --project tsconfig.json",
        "logs": "firebase functions:log",
        "serve": "npm run build && firebase serve --project codemortals-website-develop --only functions",
        "shell": "npm run build && firebase functions:shell",
        "test": "npm run build && npm run test:cucumber",
        "test:cucumber": "nyc cucumber-js --require ./test ./test/features --exit",
        "start": "npm run serve"
    },
    "private": true,
    "main": "lib/index.js",
    "engines": {
        "node": "10"
    },
    "dependencies": {
        "@sendgrid/mail": "6.5.3",
        "ejs": "3.0.1",
        "firebase-admin": "11.4.1",
        "firebase-functions": "3.24.1",
        "request": "2.88.2",
        "request-promise-native": "1.0.8",
        "uuid": "7.0.1"
    },
    "devDependencies": {
        "@types/ejs": "3.0.1",
        "@types/request-promise-native": "1.0.17",
        "@types/uuid": "7.0.0",
        "chai": "4.2.0",
        "copyfiles": "2.2.0",
        "cucumber": "6.0.5",
        "firebase-functions-test": "0.2.0",
        "nock": "12.0.1",
        "nyc": "13.3.0",
        "tslint": "6.0.0",
        "typescript": "3.8.2"
    }
}
